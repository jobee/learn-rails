<%# navigation styled for Zurb Foundation 5 %>
<div class="contain-to-grid fixed">
  <nav class="top-bar" data-topbar>
    <ul class="title-area">
      <li class="name">
      	<h1><%= link_to 'Home', root_path %></h1>
      </li>
      <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
    </ul>
    <section class="top-bar-section">
      
      <!-- Right Nav Section -->
      <ul class="right">
        <li><a href="#">Recipes</a></li>
        <li class="divider"></li>
    	  <li><%= link_to 'Products', products_path %></li>
        <li class="divider"></li>
        <li><%= link_to 'Shopping Lists', lists_path %></li>
    	  <li class="divider"></li>
        <% if current_user %>
          <li class="has-dropdown">
            <a href="#">Signed in as <strong><%= current_user.name %></strong></a>
            <ul class="dropdown">
              <li><%= link_to "Sign out", signout_path, id: "sign_out" %></li>
            </ul>
          </li>
        <% else %>
          <li class="has-form">
            <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", :class => "button" %>
          </li>
        <% end %>
    	  
      </ul>

      <!-- Left Nav Section -->
      <ul class="left">

      </ul>

    </section>
  </nav>
</div>